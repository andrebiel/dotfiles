# EXPORTS / PATH
export ZSH="$HOME/.oh-my-zsh"
export GOPATH="$HOME/dev/go"
export PATH=$HOME/bin:/usr/local/bin:$HOME/.composer/vendor/bin:$PATH:$(go env GOPATH)/bin:/opt/homebrew/bin:$PATH
export PATH=/Users/Shared/DBngin/mysql/8.0.27/bin:$PATH
export PATH="/usr/local/opt/php@7.4/bin:$PATH"

# THEME
ZSH_THEME="avit"

# SET ESCAPE TIMEOUT
KEYTIMEOUT=1

# PLUGINS
plugins=(git yarn npm zsh-autosuggestions)
source $ZSH/oh-my-zsh.sh

# AUTOLOAD SCRIPTS
fpath=( ~/dotfiles/zsh/functions "${fpath[@]}" )
autoload -Uz $fpath[1]/*(.:t)

# Aliases
alias vim="nvim"
alias pa="php artisan"
alias sa="sail artisan"
alias ip="ipconfig getifaddr en0"
alias c="clear"
alias tf="terraform"
alias soundreset="sudo kill `ps -ax | grep 'coreaudiod' | grep 'sbin' |awk '{print $1}'`"
alias python="python3"
alias dotfiles="vim ~/dotfiles"
alias gs="git status"
alias gl="git log"
alias gd="git diff"
alias no="cd ~/dev/nice-outside"
alias sail='[ -f sail ] && bash sail || bash vendor/bin/sail'
alias ports="lsof -iTCP -sTCP:LISTEN -P"
alias pest="./vendor/bin/pest"
alias tr=rename_tab

# MISC
DISABLE_AUTO_TITLE="true"




